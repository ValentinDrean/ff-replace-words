{
  "applications": {
    "gecko": {
      "id": "valentin@drean.xyz",
      "strict_min_version": "42.0"
    }
  },
  "manifest_version": 2,
  "name": "Novlang Annihilator",
  "version": "1.1",

  "content_security_policy": "script-src 'self' https://example.com; object-src 'self'",

  "content_scripts": [
    {
      "js": ["changeWords.js", "options/options.js"],
      "css": ["options/options.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_ui": {
    "page": "options/options.html"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage"
  ]
}
